pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Nuttph/Jenkins02.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t jenkins02-dotnet .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat '''
                docker stop jenkins02-container || exit 0
                docker rm jenkins02-container || exit 0
                docker run -d -p 8081:8081 --name jenkins02-container jenkins02-dotnet
                '''
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
